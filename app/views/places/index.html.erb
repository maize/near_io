<h1>Listing Places</h1>
<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th class="center" colspan="3">Actions</th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= link_to 'Show', place.slug, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_place_path(place), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

