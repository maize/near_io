<table class="table table-striped">
	<tr>
		<th>Name</th>
		<th>Category</th>
		<th>Location</th>
	</tr>
	<% @places.each do |place| %>
	<tr>
		<td><%= place["name"] %></td>
		<td><%= place["category"] %></td>
		<% unless place["location"]["city"].nil? %>
		<td><%= place["location"]["city"].to_s+", "+place["location"]["country"].to_s %></td>
		<% else %>
		<td>N/A</td>
		<% end %>
	</tr>
	<% end %>
</table>