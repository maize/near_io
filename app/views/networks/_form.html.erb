<%= form_for @network, :html => { :class => "form-horizontal" } do |f| %>
  <% if @network.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@network.errors.count, "error") %> prohibited this network from being saved:</h2>

      <ul>
      <% @network.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group">
      <label class="control-label">
          <%= f.label :name %>
      </label>
      <div class="controls">
          <%= f.text_field :name %>
      </div>
  </div>
  <div class="control-group">
      <label class="control-label">
          <%= f.label :latitude %>
      </label>
      <div class="controls">
          <%= f.text_field :latitude %>
      </div>
  </div>
  <div class="control-group">
      <label class="control-label">
          <%= f.label :longitude %>
      </label>
      <div class="controls">
          <%= f.text_field :longitude %>
      </div>
  </div>
  <div class="control-group">
      <label class="control-label">
          <%= f.label :slug %>
      </label>
      <div class="controls">
          <%= f.text_field :slug %>
      </div>
  </div>
  <div class="control-group">
      <label class="control-label">
          <%= f.label :image %>
      </label>
      <div class="controls">
          <%= f.file_field :image %>
      </div>
  </div>
  <div class="form-actions">
      <%= link_to 'Cancel', networks_path, :class => "btn" %>
      <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
