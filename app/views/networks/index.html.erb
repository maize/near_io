<div class="cn1">
  <div class="cn2">
    <div class="hero-unit">
      <h1>Discover local events near<br />your favourite places</h1>
      <p>
        <% @networks.each do |network| %>
          <% unless user_signed_in? %>
            <%= link_to "Check out the preview", user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-large" %>
          <% else %>
            <%= link_to "Sign up", network, :class => "btn btn-primary btn-large" %>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
</div>