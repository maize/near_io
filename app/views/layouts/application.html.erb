<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "near" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= favicon_link_tag %>
  </head>
  <% if @place %>
  <body>
  <% else %>
  <body>
  <% end %>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand pull-left" href="<%= root_url %>">near</a>
          <div class="navbar-text pull-left hide">
            <%= request.ip %>
            <%= request.location.city %>
            <%= request.location.country %>
          </div>
          <ul class="nav pull-right">
            <% unless user_signed_in? %>
            <li><%= link_to "Login with Facebook", user_omniauth_authorize_path(:facebook) %></li>
            <% else %>
            <li class="dropdown" id="userMenu">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#userMenu">
                <%= image_tag("https://graph.facebook.com/"+current_user.uid+"/picture", :size => "20x20", :alt => current_user.name) %>
                <%= current_user.name %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
              </ul>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
        <%= yield %>
        <div id="map_canvas" style="width: 100%; height: 500px"></div>
    </div> <!-- /container -->
    <%= javascript_include_tag "application" %>
    <script src="http://js.pusher.com/1.12/pusher.min.js"></script>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript">
      function initMap() {
        var mapOptions = {
          center: new google.maps.LatLng(51.510042794076, -0.13391156241932),
          zoom: 14,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);
      }

      function addMarker(title,lon,lat) {
        var location = new google.maps.LatLng(lon, lat);
        marker = new google.maps.Marker({
          position: location,
          title:title,
          animation: google.maps.Animation.DROP,
          map: map
        });
      }

      $(document).ready(function(){
          var map;
          initMap();

          // Enable pusher logging - don't include this in production
          Pusher.log = function(message) {
            if (window.console && window.console.log) window.console.log(message);
          };

          // Flash fallback logging - don't include this in production
          WEB_SOCKET_DEBUG = true;

          var pusher = new Pusher('63dd24301f53a7908733');
          var channel = pusher.subscribe('tweets_channel');
          channel.bind('got_tweet', function(data) {
            addMarker(data.text, data.location[1], data.location[0]);
          });
      });
      </script>
  </body>
</html>
